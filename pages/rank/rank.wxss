/* 头部样式 */
.header {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #f1f1f1;
    padding: 10px;
    margin-bottom: 20px;
  }
  
  .title {
    font-size: 20px;
    font-weight: bold;
    color: #333;
  }
  
  /* 列表样式 */
  .list {
    background-color: #fff;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
    padding: 10px;
  }
  
  .item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px 0;
    border-bottom: 1px solid #ccc;
  }
  
  .text {
    font-size: 16px;
    color: #333;
  }
  
  /* 对齐 */
  .item text:nth-child(1) {
    width: 20%;
    text-align: center;
  }
  
  .item text:nth-child(2) {
    width: 60%;
    text-align: left;
    padding-left: 10px;
  }
  
  .item text:nth-child(3) {
    width: 20%;
    text-align: center;
  }
  
  .pagination {
    margin-top: 10px;
    padding-top: 10px;
    display: flex;
    justify-content: center;
  }
  
  .btn-prev,
  .btn-next {
    display: inline-block;
    width: calc(100% / 3);
    margin: 0 10px;
    padding: 8px;
    font-size: 14px;
    color: #333;
    border: 1px solid #ccc;
    border-radius: 4px;
    background-color: #fff;
    outline: none;
  }
  
  .btn-prev.active,
  .btn-next.active {
    color: #fff;
    background-color: #007aff;
    border-color: #007aff;
  }

  .bt_dash_line {
    width: 100%;
    height: 1px;
    background-image: linear-gradient(to right, #37CDDD, #37CDDD, transparent 50%);
    background-size: 8px 1px;
    background-repeat: repeat-x;
    margin-top: 20rpx;
  }
  